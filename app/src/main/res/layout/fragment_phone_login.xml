<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFFFFF"
android:visibility="visible"
tools:context=".authentication.PhoneLoginFragment"
tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/login_page1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/dm_sans_bold"
        android:text="Namaste"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="324dp"
        android:layout_height="52dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/orange_round_corner_box"
        android:padding="12dp"
        android:text="          +91"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/_25dp"
        android:layout_height="21dp"
        android:scaleType="centerCrop"
        android:src="@drawable/india"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.482" />

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="26dp"
        android:background="#A0A0A0"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.468" />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="183dp"
        android:layout_height="50dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/dm_sans_bold"
        android:hint="Mobile Number"
        android:importantForAutofill="no"
        android:autofillHints="phone"
        android:inputType="phone"
        android:text=""
        android:textColor="#2E2E2E"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"

        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <Button
        android:id="@+id/send_otp"
        android:layout_width="324dp"
        android:layout_height="58dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/round_btn"
        android:fontFamily="@font/dm_sans_bold"
        android:text="Get OTP"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/line"
        android:text=""
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/send_otp"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/send_otp"
        app:layout_constraintTop_toBottomOf="@+id/send_otp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@color/white"
        android:text="or_connect_with"
        android:textColor="#757575"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/send_otp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/send_otp"
        app:layout_constraintTop_toBottomOf="@+id/send_otp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/orange_round_corner_box"
        app:layout_constraintEnd_toEndOf="@+id/send_otp"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintStart_toStartOf="@+id/send_otp"
        app:layout_constraintTop_toBottomOf="@+id/send_otp" />

    <TextView
        android:id="@+id/googleSignin"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/orange_round_corner_box"
        app:layout_constraintEnd_toEndOf="@+id/send_otp"
        app:layout_constraintHorizontal_bias="0.339"
        app:layout_constraintStart_toStartOf="@+id/send_otp"
        app:layout_constraintTop_toBottomOf="@+id/send_otp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/google"
        app:layout_constraintBottom_toBottomOf="@+id/googleSignin"
        app:layout_constraintEnd_toEndOf="@+id/googleSignin"
        app:layout_constraintStart_toStartOf="@+id/googleSignin"
        app:layout_constraintTop_toTopOf="@+id/googleSignin" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/admin2"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <ProgressBar
        android:id="@+id/phoneProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="115dp"
        android:layout_height="97dp"
        android:indeterminateTint="@color/btn_color"
        app:layout_constraintBottom_toBottomOf="@+id/send_otp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.464" />

</androidx.constraintlayout.widget.ConstraintLayout>
