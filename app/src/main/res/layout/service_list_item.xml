<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/service_image_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintEnd_toStartOf="@id/service_info_container">
        <ImageView
            android:background="@drawable/item_list_img"
            android:id="@+id/food_service_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/food"
            android:scaleType="centerCrop"
            android:clipToOutline="true"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/service_info_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@id/service_image_container"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/food_service_title"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/food_service_description"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/food_service_subscriber_count"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:text="40 "
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:drawableStart="@drawable/ic_subscriber_count"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/food_service_rating"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_rating"
            android:background="@color/green"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>